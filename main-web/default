server {
    server_name containerized.services;
    listen 80;
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    root /var/www/html;
    index index.html;
    location /greeting/ {
        proxy_pass http://172.17.42.1:5000;
	proxy_set_header Host $host;
    }
}
